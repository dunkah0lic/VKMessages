<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_linear_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="5dp"
     >

    <ImageView
        android:id="@+id/sender_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:maxHeight="45dp"
        android:maxWidth="45dp"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:divider="@drawable/one"
    	android:dividerPadding="12dip"
    	android:showDividers="middle"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message_body_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fontFamily="sans-serif"
            android:maxWidth="300dp"
            android:paddingRight="5dp"
            android:paddingLeft="7dp"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
            android:textColor="#888888"
            android:fontFamily="sans-serif"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/Nikolay/AndroidStudioProjects/VKMessages4/vKMessages/src/main/res/layout/message_list_item.xml -->